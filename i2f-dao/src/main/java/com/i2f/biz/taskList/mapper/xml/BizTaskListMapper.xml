    <sql id="baseQueryBody">
        select
               a.id
              ,a.user_id
              ,a.name
              ,a.content
              ,a.level
              ,a.value
              ,a.progress
              ,a.process
              ,a.deadline
              ,a.status
              ,case
              when a.status=0 then '运行'
              when a.status=1 then '结束'
              when a.status=2 then '挂起'
              end status_desc
              ,a.remark
              ,a.create_time
              ,a.update_time
        from biz_task_list a
    </sql>

