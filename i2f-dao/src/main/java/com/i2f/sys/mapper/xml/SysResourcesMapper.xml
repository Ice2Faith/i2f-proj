    </select>
    <select id="countOfMenuKey" resultType="java.lang.Integer">
        select count(*) cnt
        from sys_resources
        where menu_key=#{key}
        and status != 99
        <if test="excludesIds!=null and excludesIds.size>0">
            and id not in
